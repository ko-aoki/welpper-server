                        <MinIndex>1</MinIndex>
                        <MaxIndex>10</MaxIndex>
                    </rollingPolicy>
    -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE"/>
        <!--
                            <appender-ref ref="FILE"/>
        -->
    </root>
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <!--
                        <appender-ref ref="FILE" />
        -->
    </root>
    <!-- log4jdbc-log4j2 -->
